{#
/**
 * Table - Header Pattern
 */
#}
{% extends '@promissory/_macros/_element.twig' %}

{# Establish HTML element #}
{% set element = 'thead' %}

{% set content %}
  {% for row in rows %}
    {% set cells = [] %}
    {% for cell in row.cells %}
      {% if not cell.element is defined %}
        {% set cell = cell|merge({
          element: 'th'
        }) %}
      {% endif %}
      {% set cells = cells|merge([cell]) %}
    {% endfor %}
            
    {{ include ('@atoms/table/row.twig', {
      cells: cells,
      attributes: row.attributes
    }, with_context = false) }}
  {% endfor %}
{% endset %}

{% block content %}{{ content }}{% endblock content %}
