{#
/**
 * Paragraph Pattern
 */
#}
{% extends '@promissory/_macros/_element.twig' %}

{% set element = 'p' %}

{% if size %}
  {% set size_class = ['font-size--' ~ size] %}
  {# Incorporate 'font-size' class into 'attributes' array #}
  {% if not attributes is defined %}
    {% set attributes = {
      'class': size_class
    } %}
  {% elseif attributes is defined and not attributes.class is defined %}
    {% set attributes = attributes|merge({
      'class': size_class
    }) %}
  {% else %}
    {% set attributes = attributes|merge({
      'class': size_class|merge(attributes.class)
    }) %}
  {% endif %}
{% endif %}

