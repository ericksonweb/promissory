{#
/**
 * Links Pattern
 */
#}
{% extends '@atoms/list.twig' %}

{% set links_classes = ['links'] %}
{% if horizontal %}
  {% set links_classes = links_classes|merge(['links--horizontal']) %}
{% endif %}

{% if not attributes is defined %}
  {% set attributes = {
    class: links_classes
  } %}
{% elseif attributes is defined and not attributes.class is defined %}
  {% set attributes = attributes|merge({
    class: links_classes
  }) %}
{% else %}
  {% set attributes = attributes|merge({
    class: links_classes|merge(attributes.class)
  }) %}
{% endif %}

{% block content %}{{ content }}{% endblock content %}
