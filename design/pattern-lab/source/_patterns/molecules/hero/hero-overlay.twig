{% set media_item %}
  {{- include ('@atoms/image.twig', {
    attributes: {
      src: 'https://via.placeholder.com/1200x600?text=Image',
      alt: "Alt text",
    }
  }) -}}
{% endset %}

{% set content_body %}
  {{ include ('@atoms/heading.twig', {
    content: "Lorem ipsum dolor sit amet consectetur",
    level: 1,
  }) }}
  {{ include ('@atoms/button.twig', {
    content: "Read More",
    attributes: {
      href: 'https://www.ericksonseniorliving.com'
    }
  }) }}
{% endset %}

{{ include ('@molecules/hero.twig', {
  media: {
    item: media_item,
  },
  content: {
    body: content_body,
    properties: ['inset', 'contain', 'half', 'left', 'middle', 'light']
  }
}) }}
