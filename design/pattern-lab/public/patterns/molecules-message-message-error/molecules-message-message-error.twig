{% set link %}
  {{- include ('@atoms/link.twig', {
    content: "Click here.",
    attributes: {
      href: '#',
    },
  }) -}}
{% endset %}

{% set content %}
  {{ include ('@atoms/paragraph.twig', {
    content: "<b>Oops!</b> That didn't work. " ~ link
  }) }}
{% endset %}

{{ include ('@molecules/message.twig', {
  content: content,
  type: 'error'
}) }}
