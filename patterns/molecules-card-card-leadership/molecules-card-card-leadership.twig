    media: {
      item:
        include ('@atoms/image.twig', {
          attributes: {
            src: '../../images/card-leadership.jpg',
            width: 220,
            height: 320,
            alt: "R. Alan Butler portrait photo.",
          }
        })
      ,
    },
    body: {
      content:
        include ('@atoms/heading.twig', {
          content: "R. Alan Butler",
